<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1_ConsultarCep.MainPage">

    <StackLayout Background="#FFBF00"
                 Padding="30"
                 Spacing="30">
        <Image x:Name="Logo" 
               Source="correios_logo.png"/>
        <Entry Placeholder="Digite o CEP"
               PlaceholderColor="#FFBF00"
               Background="#FFFFFF"
               x:Name="CEP"/>
        <Button Text="BUSCAR CEP"
                TextColor="#FFFFFF"
                BackgroundColor="#00416B"
                x:Name="BUTTON"/>
        <Label Text=""
               VerticalOptions="Center"
               HorizontalOptions="Center"
               x:Name="RESULTADO"/>
    </StackLayout>

</ContentPage>
